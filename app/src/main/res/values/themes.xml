<resources>

    <attr name="gradientStartColor" format="reference|color" />
    <attr name="gradientEndColor" format="reference|color" />

    <style name="Theme.TV_test2" parent="@style/Theme.Leanback" >
        <item name="android:windowBackground">@drawable/back_foto</item>
        <item name="defaultSearchColor">@color/search_color</item>
        <item name="defaultSearchIconColor">@android:color/black</item>
        <item name="android:colorPrimary">@color/primaryLightColor</item>
        <item name="android:windowAllowReturnTransitionOverlap">true</item>
        <item name="android:windowAllowEnterTransitionOverlap">true</item>
    </style>

    <style name="Theme.TV_test2.Pages" parent="Theme.TV_test2" >
        <item name="browseRowsMarginTop">100dp</item>
    </style>

    <style name="TextRowCard">
        <item name="android:height">150dp</item>
        <item name="android:width">100dp</item>
        <item name="android:padding">20dp</item>
        <item name="gradientStartColor">@color/secondaryLightColor</item>
        <item name="gradientEndColor">@color/secondaryDarkColor</item>
        <item name="android:background">@drawable/row_card_background</item>
    </style>

    <style name="ImageRowCard">
        <item name="android:height">150dp</item>
        <item name="android:width">100dp</item>
        <item name="android:scaleType">fitXY</item>
        <item name="gradientStartColor">@color/primaryLightColor</item>
        <item name="gradientEndColor">@color/primaryDarkColor</item>
        <item name="android:background">@drawable/row_card_background</item>
    </style>
</resources>