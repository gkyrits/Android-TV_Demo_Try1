<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PageBFragment">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="110dp"
        android:text="Page B"
        android:textColor="@color/primaryColor"
        android:textSize="36sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/buttonB1"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="64dp"
        android:layout_marginTop="64dp"
        android:background="@drawable/list_text"
        android:nextFocusLeft="@id/browse_frame"
        android:nextFocusRight="@id/buttonB2"
        android:nextFocusUp="@id/buttonB3"
        android:nextFocusDown="@id/buttonB3"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:text="Button"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/buttonB2"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:background="@drawable/list_text"
        android:nextFocusLeft="@id/buttonB1"
        android:nextFocusRight="@id/buttonB3"
        android:nextFocusUp="@id/buttonB4"
        android:nextFocusDown="@id/buttonB4"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:text="Button"
        android:textSize="24sp"
        app:layout_constraintStart_toEndOf="@+id/buttonB1"
        app:layout_constraintTop_toTopOf="@+id/buttonB1" />

    <Button
        android:id="@+id/buttonB3"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:background="@drawable/list_text"
        android:nextFocusLeft="@id/browse_frame"
        android:nextFocusRight="@id/buttonB4"
        android:nextFocusUp="@id/buttonB1"
        android:nextFocusDown="@id/buttonB1"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:text="Button"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="@+id/buttonB1"
        app:layout_constraintTop_toBottomOf="@+id/buttonB1" />

    <Button
        android:id="@+id/buttonB4"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:background="@drawable/list_text"
        android:nextFocusLeft="@id/buttonB3"
        android:nextFocusRight="@id/buttonB1"
        android:nextFocusUp="@id/buttonB2"
        android:nextFocusDown="@id/buttonB2"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:text="Button"
        android:textSize="24sp"
        app:layout_constraintStart_toEndOf="@+id/buttonB3"
        app:layout_constraintTop_toTopOf="@+id/buttonB3" />
</androidx.constraintlayout.widget.ConstraintLayout>